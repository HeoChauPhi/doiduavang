{% extends 'layout.twig' %}

{% block content %}
<div class="container">
  <div class="main-content-inner">
    {% include 'searchform.twig' %}

    <div class="search-result archive-list">
      {% if posts %}
        <div class="row">
          {% for post in posts %}
            {% include 'archive-tease.twig' %}
          {% endfor %}
        </div>
      {% else %}
        <p>{{ __('Sorry, no results were found!', 'custom_theme') }}</p>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
